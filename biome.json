{
	"$schema": "https://biomejs.dev/schemas/1.3.3/schema.json",
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"correctness": {
				"useExhaustiveDependencies": "warn"
			},
			"suspicious": {
				"noDoubleEquals": "warn"
			},
			"style": {
				"noImplicitBoolean": "off"
			}
		}
	}
}